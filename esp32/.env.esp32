# ESP32 Sensor Configuration
# These values are currently hardcoded in esp32_sensor_sender.ino
# Update the sketch to use these environment variables for flexibility

# ─── WIFI ─────────────────────────────────────────────────────────────────────
WIFI_SSID=SMOKi
WIFI_PASSWORD=smoki1234

# ─── BACKEND API ──────────────────────────────────────────────────────────────
API_URL=https://smoki-backend.onrender.com/api/sensors/data
DEVICE_ID=esp32_living_room

# ─── SENSOR SETTINGS ──────────────────────────────────────────────────────────
# BME680 (Temperature, Humidity, Pressure, VOCs)
BME680_ENABLED=true

# MICS6814 (NO2, CO, NH3)
MICS6814_ENABLED=true

# PMS7003 (PM2.5, PM10)
PMS7003_ENABLED=true

# ─── TIMING ───────────────────────────────────────────────────────────────────
POST_INTERVAL_MS=5000

# ─── CALIBRATION ──────────────────────────────────────────────────────────────
# Sensor calibration offsets (optional)
TEMP_OFFSET=0
HUMIDITY_OFFSET=0
PRESSURE_OFFSET=0
